<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<p class="restaurant-show-subtitle">{{restaurant.name_en}}</p>
<div class="container restaurant-show-container">
  <div class="d-flex justify-content-end">
      <a type="button" class="btn btn-outline-secondary btn-sm btn-crud" href="/restaurants/{{ restaurant._id }}/edit">
        <i class="fas fa-edit"></i>編輯
      </a>      
      <form action="/restaurants/{{ restaurant._id }}/delete" method="POST" style="display: inline;">
        <button class="btn btn-outline-secondary btn-sm mx-2 btn-crud" type="submit" onclick="showAlert()"><i class="fas fa-trash-alt"></i>刪除</button>
      </form>
      <a href="/">
        <button type="button" class="btn btn-outline-secondary btn-sm btn-crud">
          <i class="fas fa-home"></i>回首頁
        </button>
      </a>
  </div>
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <span class="badge badge-pill badge-danger font-weight-normal">
        {{restaurant.rating}}
        <i class="fas fa-star fa-xs"></i>
      </span>
      <p class="mb-1 mt-2">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>料理類別：
        </span>
        {{restaurant.category}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>據點地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>訂位專線：
        </span>
        {{restaurant.phone}}
      </p>
      {{#if restaurant.website}}
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-link pr-1"></i>官方網站：
        </span>
        <a href="{{restaurant.website}}" target="_blank">{{restaurant.website}}</a>
      </p>
      {{/if}}
      <p class="mb-5">{{restaurant.description}}</p>
      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}" style="max-width: 600px;">
    </div>
  </div>
</div>